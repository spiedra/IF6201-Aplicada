



<form method="POST">
    <div class="table-responsive">
        <table id="table" class="table">
            <thead class="table-dark">
                <tr class="text-center">
                    <th>Nombre</th>
                    <th>Cantidad</th>
                    <th>Precio</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody id="tbody">

                @for (int i = 0; i < 12; i++)
                {
                    <tr class="text-center">
                        <td>Producto número @i</td>
                        <td>2</td>
                        <td>US$ 100</td>
                        <td class="text-center"><button id="eliminar" type="button" class="btn btn-danger text-center" onclick="eliminarRow(this); eliminarDeCarrito(); return false;">x</button></td>
                    </tr>
                }
            </tbody>
            <tfoot id="tfoot">
                <tr>
                    <td></td>
                    <td>Precio total:</td>
                    <td id="precio">US$ 5000</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
    </div>
    <div id="button" class="text-center">
        <button type="submit" class="mb-4 btn btn-primary">Comprar</button>
    </div>
</form>
