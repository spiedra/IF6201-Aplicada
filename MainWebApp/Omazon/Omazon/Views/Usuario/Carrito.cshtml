



<form method="POST">
    <div class="table-responsive">
        <table id="table" class="table">
            <thead class="table-dark">
                <tr class="text-center">
                    <th>Nombre</th>
                    <th>Cantidad</th>
                    <th>Precio</th>
                    <th>Sub Total</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody id="tbody">
                @if (ViewBag.Carrito != null)
                {
                    List<ProductoModel> productos = ViewBag.Carrito.Productos;
                    @foreach (ProductoModel producto in productos)
                    {
                        <tr class="text-center">
                            <td>@producto.NombreProducto</td>
                            <td>@producto.Cantidad</td>
                            <td>@producto.Precio US$</td>
                            <td>@producto.Precio US$ * @producto.Cantidad</td> <!--Necesario el subtotal desde la base de datos-->
                            <td class="text-center"><button id="eliminar" type="button" class="btn btn-danger text-center" onclick="eliminarRow(this); eliminarDeCarrito(); return false;">x</button></td>
                        </tr>
                    }
                }
            </tbody>
            <tfoot id="tfoot">
                <tr>
                    <td></td>
                    <td></td>
                    <td>Precio total:</td>
                    @if (ViewBag.Carrito != null)
                    {
                        <td id="precio">@ViewBag.Carrito.SubTotal US$</td> <!--Necesario el sp para el total-->
                    }
                    <td></td>
                </tr>
            </tfoot>
        </table>
    </div>
    <div id="button" class="text-center">
        <button type="submit" class="mb-4 btn btn-primary">Comprar</button>
    </div>
</form>
